{
  "name": "GoStudy",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "prettier --check . --ext .js,.jsx,.ts,.tsx,./src && eslint . --ext .js,.jsx,.ts,.ts,./src",
    "lint_fix": "prettier --write . --ext .js,.jsx,.ts,.tsx,./src && eslint . --ext .js,.jsx,.ts,.tsx,./src --fix",
    "prepush": "npm run lint && npm run test"
  },
  "dependencies": {
    "@types/react-native": "^0.63.23",
    "firebase": "^7.22.0",
    "react": "16.13.1",
    "react-native": "0.63.2",
    "react-native-dotenv-milkywire": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/runtime": "7.11.2",
    "@react-native-community/eslint-config": "1.1.0",
    "@types/react": "^16.9.49",
    "@types/react-test-renderer": "^16.9.3",
    "babel-jest": "25.5.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.3.0",
    "jest": "25.5.4",
    "lint-staged": "^10.4.2",
    "metro-react-native-babel-preset": "0.59.0",
    "prettier": "2.1.2",
    "react-test-renderer": "16.13.1",
    "typescript": "^4.0.2"
  },
  "jest": {
    "preset": "react-native",
    "verbose": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,/src,js,jsx,ts,ts,/src}": "eslint --cache --ignore-path .react-native/.eslintignore . --fix",
    "*.{js,css,md}": "prettier -ignore-path .react-native/.prettierignore . --write"
  }
}
