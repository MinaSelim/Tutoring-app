{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports":true,
      "esModuleInterop":true,
      "isolatedModules":true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,  
      "target": "esnext",
      "noImplicitAny": false,
      "module": "commonjs",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true //Might be false for dev environment
    },
    "exclude": [
      "node_modules",
      "babel.config.ts",
      "metro.config.ts",
      "prettierrc.js",
      ".eslint.js"
    ]
  }