{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./*"]
    }
  },
  "include": ["src/**/*", "tests/**.test.ts"],
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "node_modules",
    "./tests/",
    "dist"
  ]
}
